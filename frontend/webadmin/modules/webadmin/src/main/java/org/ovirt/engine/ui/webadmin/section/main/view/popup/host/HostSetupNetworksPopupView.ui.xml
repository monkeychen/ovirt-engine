<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
    xmlns:e="urn:import:org.ovirt.engine.ui.webadmin.widget.editor"
    xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
    xmlns:p="urn:import:org.ovirt.engine.ui.webadmin.section.main.view.popup.host.panels"
    xmlns:c="urn:import:org.ovirt.engine.ui.common.widget"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants' />

    <ui:style type="org.ovirt.engine.ui.webadmin.section.main.view.popup.host.panels.NetworkPanelsStyle">
        .fullWidth {
            width: 100%;
        }

        .unassignedtitle {
            font-size: small;
            text-align: center;
            margin-bottom: 3px;
        }

        .externaltitle {
            font-size: small;
            display: inline;
        }

        .externalNetworksPanel {
            text-align: center;
            margin-bottom: 5px;
            margin-top: 30px;
        }

        .externalNetworksInfo {
            display: inline;
            margin-left: 2px;
        }

        .nicsPanelTitles {
            text-align: center;
            height: 25px;
        }

        .statusLabel {
            font-size: 15px;
            font-weight: bold;
            color: gray;
            padding-left: 20px;
        }

        .errorLabel {
            font-size: 15px;
            font-weight: bold;
            color: red;
            padding-left: 20px;
        }

        .warningLabel {
            font-size: 15px;
            font-weight: bold;
            color: #753603;
            padding-left: 20px;
        }

        .itemPanel {
            border-width: 1px;
            border-style: solid;
            width: 100%;
            font-size: 13px !important;
            color: black;
        }

        .networkGroupDragOver {
            border-color: black !important;
            box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
        }

        .networkPanel {
            background-color: #FFFFFF;
            border-color: #C5C5C5;
            cursor: move;
            margin-bottom: 5px;
            margin-top: 5px;
            overflow: hidden;
        }

        .networkPanelWithoutVlan {
            height: 36px;
        }

        .networkPanelWithVlan {
            height: 46px;
        }

        .networkPanel:HOVER {
            background-color: #F6F6F6;
            box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
        }

        .disabledNetworkPanel {
            background-color: #E3E3E3;
            border-color: #C5C5C5;
            color: gray;
            height: 36px;
        }

        .mgmtNetwork {
            font-weight: bold;
        }

        .nicPanel {
            background-color: #CED8DF;
            border-color: #7A8D9A;
            cursor: move;
            height: 32px;
        }

        .nicPanel:HOVER {
            background-color: #BBBBBB;
            box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
        }

        .bondPanel, .labelPanel {
            cursor: move;
            height: auto;
            background-color: #EFEFEF;
        }

        .newLabelPanel {
            background-color: white;
            border-style: dashed;
        }

        .groupPanel {
            border-color: #999999;
            background-color: #F6F6F6;
            border-width: 1px;
            border-style: solid;
            width: 100%;
        }

        .unassignedNetworksPanel {
            border-width: 1px;
            border-style: solid;
            border-color: #F6F6F6;
            width: 100%;
            height: 100%;
            background-color: #F6F6F6;
        }

        .actionButtonNetwork {
            margin-right: 3px;
            margin-left: 5px;
        }

        .actionButtonBond {
            padding: 5px 8px;
        }

        .networkImageBorder {
            border: 1px solid #C5C5C5;
            width: 18px !important;
            height: 18px !important;
        }

        .syncImageBorder {
            border: 1px solid #FFFFFF;
            width: 18px !important;
            height: 18px !important;
        }

        .networkStatusPanel {
            margin-right: 5px;
        }

        .emptyPanel {
            border: 1px dashed gray;
            color: gray;
            height: 36px;
            width: 100%;
        }

        .emptyPanelLabel {
            padding-left: 10px;
            padding-top: 6px;
        }

        .bottomCheckBox {
            width: 100%;
            padding: 5px 5px 0px 5px;
            margin-bottom: 0px;
        }

        .allNicsPanel{
            background-color: #F6F6F6;
            border-spacing: 10px;
            border-collapse: separate;
        }

        .errorPanel{
            background-color: pink;
            height: 30px;
            border-bottom: 1px solid #C5C5C5;
        }

        .warningPanel {
            background-color: #F4FA58;
            height: 30px;
            border-bottom: 1px solid #C5C5C5;
        }

        .checkBoxesPanel{
            border-top: 1px solid #C5C5C5;
            width: 95%;
        }

        .requiredTitlePanel {
            background-color: #778899;
            width: 100%;
            height: 36px;
            border-color: #778899;
            border-style: solid;
            border-width:1px;
        }

        .requiredLabel{
            text-align: center;
            font-weight: bold;
            padding-top: 6px;
        }

        .vlanLabel{
            padding-left: 3px;
            padding-right: 3px;
            white-space: nowrap;
        }

        .titleLabel{
            white-space: nowrap;
            overflow: hidden;;
            text-overflow: ellipsis;
        }

        .fixedTable {
            table-layout: fixed;
            width: 100%;
        }

        .topMargin {
            margin-top: 15px;
        }

        .networksPanel {
            height: 370px;
            overflow-y: auto;
        }
    </ui:style>

    <d:SimpleDialogPanel width="900px" height="715px">
        <d:content>
            <b:Container fluid="true">
                <b:Row>
                    <b:Column size="SM_12">
                        <b:Alert ui:field="statusPanel"/>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="SM_8">
                        <b:Row>
                            <b:Column size="SM_6">
                                <g:Label text="{constants.interfaces}" styleName="{style.nicsPanelTitles}"/>
                            </b:Column>
                            <b:Column size="SM_6">
                                <g:Label text="{constants.assignedLogicalNetworks}"
                                         styleName="{style.nicsPanelTitles}"/>
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_12" addStyleNames="{style.topMargin}">
                                <g:ScrollPanel height="370px" ui:field="nicScrollPanel">
                                    <e:AnimatedVerticalPanel ui:field="nicList"
                                                             addStyleNames="{style.allNicsPanel}"/>
                                </g:ScrollPanel>
                            </b:Column>
                        </b:Row>
                    </b:Column>
                    <b:Column size="SM_4">
                        <b:Row>
                            <b:Column size="SM_12">
                                <c:RadioButtonPanel ui:field="networksOrLabels" dataToggle="BUTTONS"
                                                    name="networksOrLabels"/>
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_12" addStyleNames="{style.networksPanel}">
                                <g:FlowPanel ui:field="networksPanel" addStyleNames="{style.topMargin}">
                                    <b:Row>
                                        <b:Column size="SM_12">
                                            <g:Label text="{constants.unassignedLogicalNetworks}"
                                                     styleName="{style.unassignedtitle}"/>
                                        </b:Column>
                                    </b:Row>
                                    <b:Row>
                                        <b:Column size="SM_12">
                                            <p:InternalNetworksPanel ui:field="internalNetworkList"/>
                                        </b:Column>
                                    </b:Row>
                                    <b:Row addStyleNames="{style.topMargin}">
                                        <b:Column size="SM_12">
                                            <g:Label text="{constants.externalLogicalNetworks}"
                                                     styleName="{style.externaltitle}"/>
                                            <d:InfoIcon ui:field="externalNetworksInfo"
                                                        styleName="{style.externalNetworksInfo}"/>
                                        </b:Column>
                                    </b:Row>
                                    <b:Row>
                                        <b:Column size="SM_12">
                                            <p:SimpleNetworkItemsPanel ui:field="externalNetworkList"/>
                                        </b:Column>
                                    </b:Row>
                                    </g:FlowPanel>
                                <g:FlowPanel ui:field="labelsPanel" visible="false" addStyleNames="{style.topMargin}">
                                    <b:Row>
                                        <b:Column size="SM_12">
                                            <p:SimpleNetworkItemsPanel ui:field="labelsList"/>
                                        </b:Column>
                                    </b:Row>
                                </g:FlowPanel>
                            </b:Column>
                        </b:Row>
                    </b:Column>
                </b:Row>
                <g:FlowPanel addStyleNames="{style.checkBoxesPanel} {style.topMargin} hsnpv_checkBoxesPanel_pfly_fix">
                    <b:Row>
                        <b:Column size="SM_6">
                            <ge:EntityModelCheckBoxEditor ui:field="checkConnectivity"
                                                          styleName="{style.bottomCheckBox}"
                                                          label="{constants.checkConHostPopup}"
                                                          usePatternFly="true"/>
                        </b:Column>
                        <b:Column size="SM_1">
                            <d:InfoIcon ui:field="checkConnInfo"/>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_6">
                            <ge:EntityModelCheckBoxEditor ui:field="commitChanges" styleName="{style.bottomCheckBox}"
                                                          label="{constants.saveNetConfigHostPopup}"
                                                          usePatternFly="true"/>
                        </b:Column>
                        <b:Column size="SM_1">
                            <d:InfoIcon ui:field="commitChangesInfo"/>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_6">
                            <ge:EntityModelCheckBoxEditor ui:field="showVf" styleName="{style.bottomCheckBox}"
                                                          label="{constants.showVfLabel}"
                                                          usePatternFly="true"/>
                        </b:Column>
                    </b:Row>
                </g:FlowPanel>
            </b:Container>
        </d:content>
    </d:SimpleDialogPanel>
</ui:UiBinder>
